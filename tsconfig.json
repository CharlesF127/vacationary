{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-jsx", // For React 17+ (use "react" for older versions)
    "moduleResolution": "node",
    "skipLibCheck": true,
    "types": ["jest", "react", "react-dom", "node"],
    "noImplicitAny": false,
    "noUnusedParameters": false,
    
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false,
   
    "outDir": "./dist" // Specify a separate directory for compiled files
  },
  "include": ["src/**/*", "server.js"], // Include all files in the src directory
  "exclude": ["node_modules", "dist"] // Exclude node_modules and the output directory
}
